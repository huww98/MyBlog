<environment names="Development">
    <script src="~/lib/remarkable/dist/remarkable.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/lib/remarkable/dist/remarkable.min.js"></script>
</environment>

<script type='text/javascript'>
    mdHtml = new window.Remarkable('commonmark');
    function updatePreview(jqueryObj) {
        var source = jqueryObj.find(".markdown-edit").val();
        jqueryObj.find('.markdown-preview').html(mdHtml.render(source));
    };
    $(".markdown-editor").each(function () {
        var editor = $(this);
        updatePreview(editor);
        editor.find(".markdown-edit").on("input", function () {
            updatePreview(editor);
        });
    })
</script>