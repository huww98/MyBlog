@using Microsoft.AspNetCore.Identity
@using MyBlog.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="form-inline">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">欢迎 @((await UserManager.GetUserAsync(User)).NickName)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link nav-link">注销</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">注册</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">登录</a></li>
    </ul>
}
